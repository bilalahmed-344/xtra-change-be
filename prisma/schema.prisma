
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id      String   @id @default(uuid())
  phoneNumber String    @unique
  phoneVerified   Boolean  @default(false)
  firstName      String   @default("")
  lastName       String   @default("")
  email       String?   @unique
  dob         DateTime?
  address     String?   
  country     String?   
  postal_code String?   
  state String?   
  city String?   
  gender     String?
  profilePic String? 
  kycVerified         Boolean   @default(false) 
  otpCode     String?
  otpExpiresAt DateTime?
  pin          String? 

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  stripeCustomerId String?
  stripeConnectId String?  @unique   
  roundUpSetting  RoundUpSetting?
  roundUpTransactions  RoundUpTransaction[]
  plaidItems       PlaidItem[]
  withdrawals      Withdrawal[]

  chargedTransactions  ChargedTransaction[]

  cards Card[]


}

model Card {
  id           String   @id @default(uuid())
  userId       String
  stripeCardId String     @unique
  brand        String?
  last4        String?
  expMonth     String?   
  expYear      String?   
  isDefault    Boolean  @default(false) 
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

// onDelete If a User is deleted  automatically delete all their Cards.
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  chargedTransactions ChargedTransaction[]

}

model RoundUpSetting {
  id          String   @id @default(uuid())
  userId      String   @unique

  paymentFrequency PaymentFrequency @default(DAILY)
  roundUpLimit     Float? 

  lastRunAt        DateTime?
  nextRunAt        DateTime?  

  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PlaidItem {
  id           String   @id @default(uuid())
  userId       String
  accessToken  String
  itemId       String
  institution  String?
  status       String?  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user     User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  accounts PlaidAccount[]
}

model PlaidAccount {
  id           String   @id @default(uuid())
  plaidItemId  String
  accountId    String   @unique
  name         String?
  mask         String?
  type         String?
  subtype      String?
  currentBalance Float?
  availableBalance Float?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

 plaidItem PlaidItem @relation(fields: [plaidItemId], references: [id], onDelete: Cascade)
 transactions PlaidTransaction[]
}
model PlaidTransaction {
  id          String   @id @default(uuid())
  plaidAccountId String
  transactionId String  @unique
  date        DateTime
  name        String
  amount      Float
  category    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  account PlaidAccount @relation(fields: [plaidAccountId], references: [id], onDelete: Cascade)
  roundUp        RoundUpTransaction?
}

model RoundUpTransaction {
  id                 String           @id @default(uuid())
  userId             String
  plaidTransactionId String           @unique   
  roundUpAmount      Float
  detectedAmount Float @default(0.0)
  status             RoundUpStatus    @default(PENDING)
  failureReason      String?          // optional: save Stripe error code/message
  stripePaymentIntentId String? 
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt

  // relations
  user               User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  plaidTransaction   PlaidTransaction @relation(fields: [plaidTransactionId], references: [id], onDelete: Cascade)
}

model ChargedTransaction {
  id                  String   @id @default(uuid())
  userId              String
  chargedAmount       Float
  stripePaymentIntentId String?
  cardId               String?
  status              String?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
  failureReason   String?

  user                User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  card                Card?             @relation(fields: [cardId], references: [id], onDelete: SetNull)
}

model Withdrawal {
  id              String   @id @default(uuid())
  userId          String
  amount          Float
  stripeTransferId String? 
  currency        String   @default("usd")
  status          WithdrawalStatus @default(PENDING)
  stripePayoutId  String?  // returned from Stripe
  stripeAccountId String?  // Stripe Connect account used for payout
  failureReason   String?  // Stripe error if FAILED
  requestedAt     DateTime @default(now()) // when user requested
  processedAt     DateTime?                // when payout initiated
  completedAt     DateTime?                // when payout succeeded
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
enum WithdrawalStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}


enum RoundUpStatus {
  PENDING       // calculated but not yet moved
  INVESTED      // successfully transferred
  FAILED        // generic fail
  INSUFFICIENT_FUNDS
  CARD_DECLINED
  RETRY_PENDING // failed but queued for retry
}
enum PaymentFrequency {
  DAILY
  WEEKLY
  MONTHLY
}


enum ChargedStatus {
  PENDING
  SUCCESS
  FAILED
  INSUFFICIENT_FUNDS
  CARD_DECLINED
  RETRY_PENDING
}